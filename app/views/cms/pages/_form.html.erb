<%= render 'cms/section_nodes/button_bar' %>

<%= f.input :name %>
<%= f.input :title, :hint => "(Leave blank if same as name)" %>
<%= f.input :path %>
<%= f.input :template_file_name, collection: Cms::PageTemplate.options, label: "Template", as: :select, include_blank: false %>
<%= f.input :cacheable, label: "Cache Enabled?" %>
<%= f.input :hidden, label: "Hide From Menus?", disabled: (!current_user.able_to?(:publish_content)) %>
<%= f.input :archived, label: "Archived?", disabled: (!current_user.able_to?(:publish_content)) %>
<%= f.input :description, input_html: {:size=>"80x5"}, :hint=>"(Optional) Used for the meta-description element of the page." %>
<%= f.input :keywords, input_html: {:size=>"80x3"}, :hint=>"(Optional) Used for the meta-keyword meta element of the page." %>
<%= f.input :language %>
<%= f.button :submit, "Save" %>
