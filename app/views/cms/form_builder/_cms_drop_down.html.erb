<div class="fields select_fields">
  <% if cms_options[:label] %>
    <%= f.label method, cms_options[:label] %>
  <% else %>
    <%= f.label method %>
  <% end %>
  <%= f.drop_down method, choices, options={:class=>"btn dropdown-toggle"}, html_options %>
  <% if cms_options[:instructions] %>
    <div class="muted help-block"><%=h cms_options[:instructions] %></div>
  <% end %>  
</div>